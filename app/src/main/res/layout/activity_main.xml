<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/CreditHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Кредитный калькулятор"
        android:textColor="#333333"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/EarlyHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="с досрочным погашением"
        android:textColor="#333333"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/loanAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CreditHeader"
        app:layout_constraintVertical_bias="0.123" />

    <EditText
        android:id="@+id/loanAmount"
        android:layout_width="224dp"
        android:layout_height="42dp"
        android:layout_marginBottom="480dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:hint="Сумма кредита"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/calc"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:background="@drawable/calc_button"
        android:fontFamily="sans-serif-condensed"
        android:text="Рассчитать"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/term"
        app:layout_constraintVertical_bias="0.296" />

    <EditText
        android:id="@+id/term"
        android:layout_width="224dp"
        android:layout_height="42dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:hint="Срок"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interestRest"
        app:layout_constraintVertical_bias="0.039" />

    <EditText
        android:id="@+id/interestRest"
        android:layout_width="224dp"
        android:layout_height="42dp"
        android:layout_marginBottom="316dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:hint="Ставка, %"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loanAmount"
        app:layout_constraintVertical_bias="0.107" />

    <RadioGroup
        android:id="@+id/termType"
        android:layout_width="222dp"
        android:layout_height="38dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/calc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/term"
        app:layout_constraintVertical_bias="0.13999999">

        <RadioButton
            android:id="@+id/monthTermType"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:buttonTint="@color/coolDarkColor"
            android:checked="true"
            android:fontFamily="sans-serif-condensed"
            android:text="в месяцах"
            android:textColor="#333333"
            android:textCursorDrawable="@drawable/calc_button" />

        <RadioButton
            android:id="@+id/yearTermType"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:buttonTint="@color/coolDarkColor"
            android:text="в годах"
            android:textColor="#333333" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>